<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMain"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_4">

    <ImageView
        android:id="@+id/img_type_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_image"
        android:tint="@color/tint1"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_type_text"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_description"
        android:tint="@color/tint2"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_type_pdf"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_picture_as_pdf"
        android:tint="@color/tint3"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_type_other"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_note"
        android:tint="@color/tint4"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_file_path"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_get_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Get"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

</LinearLayout>